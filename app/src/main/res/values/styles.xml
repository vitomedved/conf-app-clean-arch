<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonRootCardViewStyle">
        <item name="android:layout_marginStart">@dimen/common_root_card_view_layout_margin_start
        </item>
        <item name="android:layout_marginTop">@dimen/common_root_card_view_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/common_root_card_view_layout_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/common_root_card_view_layout_margin_bottom
        </item>
        <item name="cardCornerRadius">@dimen/common_root_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/common_root_card_view_elevation</item>
    </style>


    <!-- Welcome fragment -->
    <style name="AddConferenceFragment">

    </style>

    <style name="AddConferenceFragment.Margins">
        <item name="android:layout_marginBottom">@dimen/fragment_add_conference_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/fragment_add_conference_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/fragment_add_conference_margin_end</item>
    </style>

    <style name="AddConferenceFragment.Margins.HelpTextStyle">
        <item name="android:text">@string/fragment_add_conference_info_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AddConferenceFragment.ImageButtonForward">
        <item name="android:background">@drawable/ic_forward</item>
    </style>

    <style name="AddConferenceFragment.QrCodeImageView">
        <item name="android:background">@drawable/qr_code</item>
    </style>

    <!-- Home activity -->
    <style name="HomeActivity">

    </style>

    <style name="HomeActivity.Margins">
        <item name="android:layout_marginStart">@dimen/activity_home_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_home_margin_small</item>
    </style>

    <style name="HomeActivity.Margins.NavDrawerHeaderText">
        <item name="android:layout_marginBottom">@dimen/activity_home_margin_small</item>
        <item name="android:textSize">@dimen/activity_home_nav_bar_text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Schedule fragment -->

    <style name="FragmentSchedule" />

    <style name="FragmentSchedule.HeaderDateNumber">
        <item name="android:text">@string/fragment_schedule_date_number_placeholder</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fragment_schedule_date_number_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentSchedule.HeaderMonth">
        <item name="android:text">@string/fragment_schedule_three_letter_month_placeholder</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fragment_schedule_three_letter_month_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentSchedule.HeaderWeekday">
        <item name="android:text">@string/fragment_schedule_three_letter_weekday_placeholder</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/fragment_schedule_three_letter_weekday_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List item event -->
    <style name="ListItemEvent"/>

    <style name="ListItemEvent.StartingTime">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:text">@string/_09_30h</item>
    </style>

    <style name="ListItemEvent.EventName">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:text">@string/event_name</item>
        <item name="android:textSize">@dimen/list_item_event_name_text_size</item>
    </style>

    <style name="ListItemEvent.EventTimeLayout">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemEvent.EventTime">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:text">@string/_10_00_12_00</item>
        <item name="android:textSize">@dimen/list_item_event_time_text_size</item>
    </style>


    <style name="ListItemEvent.EventLocationLayout">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/list_item_event_location_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemEvent.EventLocation">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:text">@string/hall_1</item>
        <item name="android:textSize">@dimen/list_item_event_location_text_size</item>
    </style>

    <style name="ListItemEvent.EventTypeImageView">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:background">@drawable/ic_todo_change</item>
    </style>

</resources>
