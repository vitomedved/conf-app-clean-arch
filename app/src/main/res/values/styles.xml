<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonRootCardViewStyle">
        <item name="android:layout_marginStart">@dimen/common_root_card_view_layout_margin_start
        </item>
        <item name="android:layout_marginTop">@dimen/common_root_card_view_layout_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/common_root_card_view_layout_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/common_root_card_view_layout_margin_bottom
        </item>
        <item name="cardCornerRadius">@dimen/common_root_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/common_root_card_view_elevation</item>
    </style>


    <!-- Welcome fragment -->
    <style name="AddConferenceFragment">

    </style>

    <style name="AddConferenceFragment.Margins">
        <item name="android:layout_marginBottom">@dimen/fragment_add_conference_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/fragment_add_conference_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/fragment_add_conference_margin_end</item>
    </style>

    <style name="AddConferenceFragment.Margins.HelpTextStyle">
        <item name="android:text">@string/fragment_add_conference_info_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AddConferenceFragment.ImageButtonForward">
        <item name="android:background">@drawable/ic_forward</item>
    </style>

    <style name="AddConferenceFragment.QrCodeImageView">
        <item name="android:background">@drawable/qr_code</item>
    </style>

    <!-- Home activity -->
    <style name="HomeActivity">

    </style>

    <style name="HomeActivity.Margins">
        <item name="android:layout_marginStart">@dimen/activity_home_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/activity_home_margin_small</item>
    </style>

    <style name="HomeActivity.Margins.NavDrawerHeaderText">
        <item name="android:layout_marginBottom">@dimen/activity_home_margin_small</item>
        <item name="android:textSize">@dimen/activity_home_nav_bar_text_size_normal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeActivity.Margins.NavigationDrawerLoginButton">
        <item name="android:drawableEnd">@drawable/ic_enter</item>
        <item name="android:padding">@dimen/activity_home_padding_small</item>
        <item name="android:text">@string/activity_home_navigation_drawer_header_button_text</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
